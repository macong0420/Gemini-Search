{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@db/*": ["db/*"]
    }
  },
  "include": ["api/**/*", "db/**/*"],
  "exclude": ["node_modules"]
} 