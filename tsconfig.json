{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@db/*": ["db/*"],
      "@/*": ["client/src/*"]
    }
  },
  "include": ["client/**/*", "db/**/*"],
  "exclude": ["node_modules"]
}
